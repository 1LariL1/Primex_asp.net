@model Order
@{
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}

<div class="container container1">

    <table class="admin__table">
        <tr class="admin__tr">
            <th class="admin__th admin__th-left">ID</th>
            <th class="admin__th">Пользователь</th>
            <th class="admin__th">Услуга</th>
            <th class="admin__th">Цена</th>
            <th class="admin__th">Статус</th>
            <th class="admin__th">Дата</th>
            <th class="admin__th">Время</th>
            <th class="admin__th admin__th-right">Адрес</th>
        </tr>

        <tr class="admin__tr">
            <td class="admin__td">@Model.IdOrders</td>
            <td class="admin__td">@Model.IdUserNavigation.Login</td>
            <td class="admin__td">@Model.IdServiceNavigation.Service1</td>
            <td class="admin__td">@Model.Price</td>
            <td class="admin__td">@Model.Status</td>
            <td class="admin__td">@Model.Date</td>
            <td class="admin__td">@Model.Time</td>
            <td class="admin__td">@Model.Address</td>
        </tr>

    </table>

    <p class="title3" style="margin-bottom: 20px;"> Вы уверены, что хотите удалить этот заказ? </p>
    <form asp-controller="Orders" asp-action="OrderDelete" method="post">
        <input type="hidden" asp-for="IdOrders" value="@Model.IdOrders" />
        <button type="submit" class="main-about-primex__button">Удалить</button>
        <a asp-controller="Orders" asp-action="OrderTable" class="main-about-primex__button" style="background-color: transparent; box-shadow: none;">Отмена</a>
    </form>

</div> 