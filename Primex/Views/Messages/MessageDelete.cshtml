@model Message
@{
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}

<div class="container container1">

    <table class="admin__table">
        <tr class="admin__tr">
            <th class="admin__th admin__th-left">ID</th>
            <th class="admin__th">Услуга</th>
            <th class="admin__th">Пользователь</th>
            <th class="admin__th">Адрес</th>
            <th class="admin__th">Комментарий</th>
            <th class="admin__th">Желаемое время</th>
            <th class="admin__th admin__th-right">Желаемая дата</th>
        </tr>

        <tr class="admin__tr">
            <td class="admin__td">@Model.IdMessage</td>
            <td class="admin__td">@Model.IdServiceNavigation.Service1</td>
            <td class="admin__td">@Model.IdUserNavigation.Login</td>
            <td class="admin__td">@Model.Address</td>
            <td class="admin__td">@Model.Comment</td>
            <td class="admin__td">@Model.Time</td>
            <td class="admin__td">@Model.Date</td>
        </tr>
    </table>

    <p class="title3" style="margin-bottom: 20px;"> Вы уверены, что хотите удалить эту заявку? </p>
    <form asp-controller="Messages" asp-action="MessageDelete" method="post">
        <input type="hidden" asp-for="IdMessage" value="@Model.IdMessage" />
        <button type="submit" class="main-about-primex__button">Удалить</button>
        <a asp-controller="Messages" asp-action="MessageTable" class="main-about-primex__button" style="background-color: transparent; box-shadow: none;">Отмена</a>
    </form>

</div> 